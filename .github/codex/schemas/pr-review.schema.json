{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Codex PR Review Output",
  "type": "object",
  "required": ["summary", "comments"],
  "additionalProperties": false,
  "properties": {
    "summary": {
      "type": "string",
      "description": "High-level PR review summary"
    },
    "comments": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/comment"
      }
    }
  },
  "definitions": {
    "comment": {
      "type": "object",
      "required": [
        "path",
        "line",
        "body"
      ],
      "additionalProperties": false,
      "properties": {
        "path": { "type": "string" },
        "line": { "type": "integer", "minimum": 1 },
        "side": { "type": "string", "enum": ["RIGHT", "LEFT"] },
        "body": { "type": "string" },
        "skill": { "type": "string" }
      }
    }
  }
}
